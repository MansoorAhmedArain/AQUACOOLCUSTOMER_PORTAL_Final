@{
    ViewData["Title"] = "AccountAsIndividual";
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="/images/fevicon.png" type="">

    <title> Customer Login </title>


    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="/css/bootstrapcss/bootstrap.min.css" />


    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    <!-- font awesome style -->
    <link href="/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="/css/Accountinfo/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="/css/Accountinfo/responsive.css" rel="stylesheet" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-white sticky-top navbar-light shadow">
            <div class="container-fluid">
                <a href="@Url.Action("Index", "Home")"><img class="logo-style ms-5" src="/images/Logo.png" alt=""> </a>
               
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-auto rounded">
                        @*  <li class="nav-item">
                            <a class="nav-link mx-2" href="/Dashboard.html" style="color: #092f57;">DASHBOARD</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" href="/Request.html" style="color: #092f57;">REQUEST</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" href="#" style="color: #092f57;">PAYMENT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" href="#" style="color: #092f57;">CUSTOMER SUPPORT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" href="#" style="color: #092f57;">MANAGE PROFILE</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" href="#" style="color: #092f57;">
                                LOGOUT <i class="fa-solid fa-right-from-bracket"></i>
                            </a>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <div class="bg-container d-md-flex">
            <div class="left-box">
                <img src="/images/BG4 .jpg" class="rounded-start rounded-pill img-style" alt="">
            </div>
            <div class="right-box">
                <div aria-live="polite" aria-atomic="true" class="position-relative">
                    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
                        @if (!string.IsNullOrWhiteSpace(Convert.ToString(TempData["Error"])))
                        {
                            <div class="toast align-items-center text-white bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                                <div class="d-flex">
                                    <div class="toast-body">
                                        <strong>Error:</strong> @TempData["Error"]
                                    </div>
                                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(Convert.ToString(TempData["Message"])))
                        {
                            <div class="toast align-items-center text-white bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                                <div class="d-flex">
                                    <div class="toast-body">
                                        <strong>Success:</strong> @TempData["Message"]
                                    </div>
                                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>


                <form method="post" action="@Url.Action("AccountAsIndividual","Home")">

                    <div class="input-style">

                        <span class="ms-3" style="color: #03213d; font-size: small; font-weight: bolder;">First Name</span>
                        <div class="input-group">
                            <input type="text" placeholder="Required" name="FirstName" required class="form-control rounded-pill" style="border: 1px solid #8FD2F0;">
                        </div>

                        <span class="ms-3" style="color: #03213d; font-size: small; font-weight: bolder;">Last Name</span>
                        <div class="input-group">
                            <input type="text" placeholder="Required" name="LastName" required class="form-control rounded-pill" style="border: 1px solid #8FD2F0;">
                        </div>

                        <span class="ms-3" style="color: #03213d; font-size: small; font-weight: bolder;">Nationality</span>
                        <div class="input-group">
                            @* <input type="text" name="Nationality"  class="form-control rounded-pill" style="border: 1px solid #8FD2F0;"> *@
                            <span class="input-group-text rounded-end rounded-pill dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="dropdownMenuButton"></span>
                            <select class="form-control rounded-start rounded-pill" placeholder="Select" required name="Nationality" style="border: 1px solid #8FD2F0;" id="Nationality">
                                <option value="">Select a request Id</option>
                                @{
                                    // <option value="">project</option>
                                    foreach (var item in (List<SelectListItem>)ViewBag.Countries)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>


                        <span class="ms-3" style="color: #03213d; font-size: small; font-weight: bolder;">
                            Primary Phone Number
                        </span>
                        <div class="input-group">
                            <input type="text" placeholder="Required" name="MobileNumber1" required class="form-control rounded-pill" style="border: 1px solid #8FD2F0;">
                        </div>

                        <span class="ms-3" style="color: #03213d; font-size: small; font-weight: bolder;">
                            Secondary Phone Number
                        </span>
                        <div class="input-group">
                            <input type="text" name="MobileNumber2" class="form-control rounded-pill" style="border: 1px solid #8FD2F0;">
                        </div>

                        <span class="ms-3" style="color: #03213d; font-size: small; font-weight: bolder;">Email Address Primary</span>
                        <div class="input-group">
                            <input type="text" placeholder="Required" name="EmailAddress1" required class="form-control rounded-pill" style="border: 1px solid #8FD2F0;">
                        </div>

                        <span class="ms-3" style="color: #03213d; font-size: small; font-weight: bolder;">
                            Email Address Secondary
                        </span>
                        <div class="input-group">
                            <input type="text" name="EmailAddress2" class="form-control rounded-pill" style="border: 1px solid #8FD2F0;">
                        </div>
                        <span class="ms-3" style="color: #03213d; font-size: small; font-weight: bolder;">
                            Create your Password
                        </span>
                        <div class="input-group">
                            <input type="password" placeholder="Required" name="Password" required class="form-control rounded-pill" style="border: 1px solid #8FD2F0;">
                        </div>

                        <div class="btn-container my-3">
                            <input type="submit" value="Signup" class="btn rounded-pill btn-style w-100" />
                        </div>
                    </div>
                </form>

            </div>
        </div>

    </main>


    <script src="/js/Custom.js"></script>
    <script src="/js/Custom2.js"></script>
    <script src="/js/bootstrapjs/bootstrap.bundle.js"></script>
    <script src="https://kit.fontawesome.com/c5b8d1d3fa.js" crossorigin="anonymous"></script>
</body>

</html>