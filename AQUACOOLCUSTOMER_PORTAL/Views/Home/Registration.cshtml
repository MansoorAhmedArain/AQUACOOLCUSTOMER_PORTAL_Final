<!DOCTYPE html>
<html>

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="/images/fevicon.png" type="">

    <title> Customer Login </title>


    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="/css/bootstrapcss/bootstrap.min.css" />


    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    <!-- font awesome style -->
    <link href="/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="/css/CreateNewCustomer/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="/css/CreateNewCustomer/responsive.css" rel="stylesheet" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-white sticky-top navbar-light shadow">
            <div class="container-fluid">
                <a href="@Url.Action("Index","Home")"><img class="logo-style ms-5" src="/images/Logo.png" alt=""> </a>

            </div>
        </nav>
    </header>

    <main>
        <div class="bg-container d-md-flex">
            <div class="left-box "><img src="/images/BG3.jpg" class="rounded-start rounded-pill img-style" alt=""></div>
            <div class="right-box">

                    <div class="icon-text h3" style="font-weight: bolder;">
                        <img src="~/Icons/User-Name.png" alt="" class="icon-image">
                        <span>Create New Account</span>
                    </div>
              
                    <div class="mt-5 input-style">
                       <form role="form" method="get" action="@Url.Action("AccountInfo", "Home")">
                        <div class="ms-3" style="color: #03213d; font-size: small; font-weight: bolder;">Customer Type</div>
                        <div class="input-group mb-3">
                            <span class="input-group-text rounded-pill rounded-end" style="background-color: #033059;">
                                <img src="~/Icons/Company.png" alt="Company" class="icon-style" id="icon-img">
                            </span>
                            <select name="regType" id="options" class="form-control rounded-pill rounded-start" style="border: 1px solid #8FD2F0;" onchange="changeIcon()">
                                <option value="" selected>-- Select Registration Type --</option>
                                <option value="Company">Company</option>
                                <option value="Individual">Individual</option>
                            </select>
                        </div>

                        @* <div class="input-group mb-3">
                            <span class="input-group-text rounded-pill rounded-end" style="background-color: #033059;"><i class="fa-solid fa-user " style="color: white;"></i></span>
                            <input type="text" class="form-control rounded-start rounded-pill" placeholder="Individual" style="border: 1px solid #8FD2F0;">
                        </div> *@

                        <input type="submit" id="submitButton" class="btn rounded-pill btn-style my-4" value="Next"/>
                        <p id="warningMessage" style="color:red; display:none">Please select an option before proceeding.</p>
                    </form>
                    </div>
            </div>
        </div>
    </main>

    <script>
        function changeIcon() {
            var select = document.getElementById('options');
            var iconImg = document.getElementById('icon-img');

            // Use the paths generated by Razor for icons
            var companyIcon = '@Url.Content("~/Icons/Company.png")';
            var individualIcon = '@Url.Content("~/Icons/Individual.png")';

            if (select.value === 'Company') {
                iconImg.src = companyIcon;
                iconImg.alt = 'Company';
            } else if (select.value === 'Individual') {
                iconImg.src = individualIcon;
                iconImg.alt = 'Individual';
            } else {
                iconImg.src = companyIcon; // Default image (Company)
                iconImg.alt = 'Company';
            }
        }
    </script>




    <script src="/js/bootstrapjs/bootstrap.bundle.js"></script>
    <script src="/js/Custom.js"></script>
    <script src="https://kit.fontawesome.com/c5b8d1d3fa.js" crossorigin="anonymous"></script>
</body>
</html>
