@{
    ViewData["Title"] = "BillExplanation";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video & PDF Viewer</title>
    <link rel="stylesheet" href="style.css">
    <style>
        .card{
            margin-top: 50px;
            margin-bottom: 20px;
        }
        /* Button */
        .video-btn {
            background: #0055cc;
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: 0.2s;
        }

            .video-btn:hover {
                background: #003d99;
            }

        /* Modal Background */
        .modal {
            display: none;
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.6);
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        /* Modal Box */
        .modal-content {
            background: white;
            padding: 0;
            width: 80%;
            max-width: 700px;
            border-radius: 10px;
            position: relative;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
        }

        /* Close Button */
        .close {
            position: absolute;
            right: 15px;
            top: -60px;
            font-size: 28px;
            color: blue;
            cursor: pointer;
            font-weight: bold;
        }

        /* Video Player */
        #popupVideo {
            width: 100%;
            height: 400px;
            border-radius: 10px;
        }

        /* Mobile Responsive */
        @@media (max-width: 600px) {
            #popupVideo

        {
            height: 250px;
        }

        }
    </style>
</head>
<body>

    <div class="container">

        <center><h2></h2></center>
        <!-- Video Section -->
        <div class="card">
            <button class="video-btn" onclick="openVideo()">▶ Watch Video</button>

            <!-- Video Popup Modal -->
            <div id="videoModal" class="modal">
                <div class="modal-content">
                    <span class="close" onclick="closeVideo()">&times;</span>
                    <video id="popupVideo" controls>
                        <source src="~/Videos/How-to-read- cooling-bill.mov" type="video/mp4">
                        Your browser does not support video playback.
                    </video>
                </div>
            </div>
        </div>

        <!-- PDF Section -->
        <div class="card">
            <iframe height="500" src="~/Documents/Billexplanation.pdf" class="pdf-box"></iframe>
        </div>

    </div>
    <script>
        function openVideo() {
            document.getElementById("videoModal").style.display = "flex";
        }

            function closeVideo() {
            let modal = document.getElementById("videoModal");
            let video = document.getElementById("popupVideo");

            modal.style.display = "none";
            video.pause();
            video.currentTime = 0;
        }
    </script>
</body>
</html>
