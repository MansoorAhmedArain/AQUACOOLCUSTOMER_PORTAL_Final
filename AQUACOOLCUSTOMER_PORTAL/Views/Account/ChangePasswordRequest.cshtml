
@{
    ViewData["Title"] = "ChangePasswordRequest";
}
<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="images/fevicon.png" type="">

    <title> Customer Login </title>

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrapcss/bootstrap.min.css" />

    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    <!-- font awesome style -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/ForgetPage/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/ForgetPage/responsive.css" rel="stylesheet" />

</head>
<div class="bg-container d-md-flex">
    <div class="left-box "><img src="/images/BG2.jpg" class="rounded-start rounded-pill img-style" alt=""></div>
    <div class="right-box">
            <div class="icon-text h3" style="font-weight: bolder;">
                <img src="~/Icons/Password.png" alt="" width="50px">
                <span>Change Password</span>
            </div>
            <div class="mt-5 input-style">
                 <form method="post" action="@Url.Action("ChangePasswordRequest","Account")">
                    <div class="input-group mb-3">
                        <span class="input-group-text rounded-pill rounded-end"><img src="~/Icons/User-Name.png" alt="" width="25px" ></span>
                        <input type="text" class="form-control rounded-start rounded-pill" placeholder="User Name" name="UserName" style="border: 1px solid #8FD2F0;">
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text rounded-pill rounded-end"><img src="~/Icons/Password.png" alt="" width="25px" ></span>
                        <input type="password" class="form-control rounded-start rounded-pill" name="OldPassword" placeholder="Old Password" style="border: 1px solid #8FD2F0;">
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text rounded-pill rounded-end"><img src="~/Icons/Password.png" alt="" width="25px"></span>
                        <input type="password" class="form-control rounded-start rounded-pill" name="NewPassword" placeholder="New Password" style="border: 1px solid #8FD2F0;">
                    </div>
                    <div class="mt-5">
                        <p style="color:red">@ViewData["ErrorMessage"]</p>
                        <input type="submit" class="btn rounded-pill forget-btn" value="Change Password" />
                    </div>
                 </form>
            </div>
    </div>
</div>
