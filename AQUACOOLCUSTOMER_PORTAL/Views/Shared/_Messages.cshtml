@if (TempData["Message"] != null)
{
    @* <div class="alert alert-success elipsis">
        @TempData["Message"]
    </div> *@
     @if (!string.IsNullOrWhiteSpace(Convert.ToString(TempData["Message"])))
            {
                <div class="toast align-items-center text-white bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            <strong>Success:</strong> @TempData["Message"]
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            }
}

@if (TempData["Error"] != null)
{
    <div aria-live="polite" aria-atomic="true" class="position-relative">
        <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
            @if (!string.IsNullOrWhiteSpace(Convert.ToString(TempData["Error"])))
            {
                <div class="toast align-items-center text-white bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            <strong>Error:</strong> @TempData["Error"]
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            }
           
        </div>
    </div>
   @*  <div class="alert alert-danger elipsis">
        @TempData["Error"]
    </div> *@
}


<style>
    .alert {
        font-weight: bold;
        font-size: 16px;
    }
    .elipsis{
        width: 500px; /* Set a fixed width */
        white-space: nowrap; /* Prevent text wrapping */
        overflow: hidden; /* Hide overflowing text */
        text-overflow: ellipsis; /* Add "..." when text overflows */
        border: 1px solid #ccc; /* Just for visibility */
        padding: 5px;
    }
</style>